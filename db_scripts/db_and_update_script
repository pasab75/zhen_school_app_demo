CREATE DATABASE testDB;

CREATE TABLE questions (
	question_id int NOT NULL AUTO_INCREMENT,
	question_text varchar(500) NOT NULL,
	answer_a_text varchar(50) NOT NULL,
	answer_b_text varchar(50) NOT NULL,
	answer_c_text varchar(50),
	answer_d_text varchar(50),
	answer_e_text varchar(50),
	answer_f_text varchar(50),
	answer_num int,
	chapter varchar(50),
	`subject` varchar(50),
	PRIMARY KEY (question_id)
);

